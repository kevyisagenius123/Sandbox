# Frontend Environment Variables
# Copy this file to .env.local and fill in your values
# IMPORTANT: Never commit .env.local or .env to source control

# Backend API URL (include protocol and port)
# NOTE: Backend runs on 8081 by default, not 8080
VITE_BACKEND_URL=http://localhost:8081

# Rust Belt swingometer API (Spring Boot service runs on 8084 by default)
VITE_RB_API=http://localhost:8084/api/rustbelt

# WebSocket URL for real-time simulation updates
VITE_WS_URL=ws://localhost:8081/sandbox-websocket

# Feature flags
VITE_ENABLE_3D_MAP=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_LOGGING=false

# Sentry DSN for error tracking (leave empty to disable)
VITE_SENTRY_DSN=

# Environment name (development, staging, production)
VITE_ENV=development

# CDN base URL for large static assets (GeoJSON, etc.)
# Leave empty to serve from same origin
VITE_CDN_URL=
